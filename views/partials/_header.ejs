<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="collapse navbar-collapse justify-content-between"
      id="navbarNavAltMarkup"
    >
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav">

        <% if (user) { %>
          <form
            class="form-inline align-items-baseline"
            action="/logout"
            method="POST"
          >
            <h6 class="mr-3">Logged In As: <%= user.email %></h6>
            <button type="submit" class="btn btn-outline-light">Logout</button>
          </form>
          <% } else { %>
          <div class="navbar-nav"style="margin-right: 5px;">
            <form
            class="form-inline align-items-baseline"
            action="/login"
            method="GET"
          >
            <button type="submit" class="btn btn-outline-light">Login</button>
            </form>
          </div>
          <div class="navbar-nav">
            <form
            class="form-inline align-items-baseline"
            action="/register"
            method="GET"
          >
            <button type="submit" class="btn btn-outline-light">Register</button>
            </form>
          </div>
          <% } %>  
    </div>
    </div>
  </main>
  </nav>
</header>
